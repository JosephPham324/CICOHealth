<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>Control.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadControl</servlet-name>
        <servlet-class>Control.LoadControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteControl</servlet-name>
        <servlet-class>Control.DeleteControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchControl</servlet-name>
        <servlet-class>Control.SearchControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateControl</servlet-name>
        <servlet-class>Control.CreateControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HealthInfoControl</servlet-name>
        <servlet-class>Control.HealthInfoControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfoControl</servlet-name>
        <servlet-class>Control.UserInfoControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadControl</servlet-name>
        <url-pattern>/loadcontrol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteControl</servlet-name>
        <url-pattern>/deletecontrol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchControl</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateControl</servlet-name>
        <url-pattern>/createcontrol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HealthInfoControl</servlet-name>
        <url-pattern>/healthinfocontrol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfoControl</servlet-name>
        <url-pattern>/userinfocontrol</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
